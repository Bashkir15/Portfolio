	<body class='home-body'>
	

		<% include ./views/shared/preloader %>
		<% include ./views/shared/nav %>
		<% include ./views/shared/mobile-menu %>

		<div class='landing-page-container'>
			<section class='landing-header'>
				<canvas id='landing-header'></canvas>
				<div class='landing-header-overlay'>
					<div>
						<h1>I'm Forrest</h1>
						<p>I engineer modern applications for the web</p>

						<button type='button' id='contact-scroller' aria-label='click to scroll to contact form'>
							<span>Contact Me</span>
